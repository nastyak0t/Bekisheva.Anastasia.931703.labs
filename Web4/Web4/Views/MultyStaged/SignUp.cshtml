
@{
    ViewData["Title"] = "SignUp";
    switch (ViewBag.Stage)
    {
        case 1:
            <h2>SignUp</h2>

            <form class="row">
                <div class="col-md-3">
                    <input name="email" type="email" class="form-control col-md-3" placeholder="Enter Email" /><br>
                    <input name="password" type="password" class="form-control col-md-3" placeholder="Enter Password" /><br>
                    <input name="confirmPassword" type="password" class="form-control col-md-3" placeholder="Confirm Password" /><br>
                    <input name="remember" type="checkbox" class="form-check-input col-md-1" style="display: inline" id="remember" />
                    <label class="form-check-label" for="remember">Remember me</label><br>
                    <button formmethod="post" formaction="~/MultyStaged/SignUp_Stage2" class="btn btn-primary col-md" style="display: inline" type="submit">Complete   Sign Up</button>
                </div>
            </form>
            break;
        case 2:
            <h2>SignUp</h2>

            <form class="row">
                <div class="col-md-3">
                    <input name="firstName" class="form-control col-md-3" placeholder="Enter First name" /><br>
                    <input name="secondName" class="form-control col-md-3" placeholder="Enter Second name" /><br>
                    <input name="birthday" type="date" class="form-control col-md-3" placeholder="Enter Date" /><br>
                    <input class="form-check-input" type="radio" name="gender" value="Male"> Male<br>
                    <input class="form-check-input" type="radio" name="gender" value="Female"> Female<br>
                    <button formmethod="post" formaction="~/MultyStaged/SignUp_Stage3" class="btn btn-primary col-md" style="display: inline" type="submit">Sign Up</button>
                </div>
            </form>
            break;
        case 3:
            <h2>SignUp Completed</h2>

            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">Password</th>
                                <th scope="col">Remember</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Second Name</th>
                                <th scope="col">Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>@ViewBag.Email</td>
                                <td>@ViewBag.Password</td>
                                <td>@ViewBag.Remember</td>
                                <td>@ViewBag.FirstName</td>
                                <td>@ViewBag.SecondName</td>
                                <td>@ViewBag.Gender</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            break;
        default:
            break;
    }
}