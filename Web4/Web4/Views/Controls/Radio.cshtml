
@{
    ViewData["Title"] = "Radio";
    if (ViewBag.Radio == null)
    {
        <form class="row">
            <div class="col-md-3">
                <h2>Radio</h2>
                <br />
                <h3>Month</h3>
                <input class="form-check-input" type="radio" name="Radio" value="Febuary"> Febuary<br>
                <input class="form-check-input" type="radio" name="Radio" value="March"> March<br>
                <input class="form-check-input" type="radio" name="Radio" value="January"> January<br>
                <input class="form-check-input" type="radio" name="Radio" value="April"> April<br>
                <input class="form-check-input" type="radio" name="Radio" value="May"> May<br>
                <input class="form-check-input" type="radio" name="Radio" value="June"> June<br>
                <input class="form-check-input" type="radio" name="Radio" value="July"> July<br>
                <input class="form-check-input" type="radio" name="Radio" value="August"> August<br>
                <input class="form-check-input" type="radio" name="Radio" value="September"> Septemer<br>
                <input class="form-check-input" type="radio" name="Radio" value="October"> October<br>
                <input class="form-check-input" type="radio" name="Radio" value="November"> November<br>
                <input class="form-check-input" type="radio" name="Radio" value="December"> December<br>
                <button formmethod="post" formaction="~/Controls/Save_Radio" class="btn btn-primary col-md-3" style="display: inline" type="submit">Save</button>
            </div>
        </form>
    }
    else
    {
        <h2>Radio</h2>
        <br />
        <h3><b>Month:</b></h3>
        <h3>@ViewBag.Radio</h3>
    }
}